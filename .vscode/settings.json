{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "triggerTaskOnSave.tasks": {
        "Prettify Code": [
            "**/*.js",
            "**/*.ts",
            "**/*.vue",
            "**/*.json",
            "**/*.css",
            "**/*.scss",
            "**/*.md",
            "**/*.html"
        ]
    }
}
